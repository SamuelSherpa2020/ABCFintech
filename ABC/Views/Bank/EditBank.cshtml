@model ABC.Dtos.BankDto.GetBankDto

<h2>Edit Bank</h2>

<form asp-action="EditBank" method="post">
    <input type="hidden" asp-for="BankId" />
    <div class="form-group" style="width:250px;margin:20px 0 20px 0;">
        <label asp-for="BankName" class="control-label"></label>
        <input asp-for="BankName" class="form-control" />
        <span asp-validation-for="BankName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
